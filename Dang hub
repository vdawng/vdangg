-- GrowHub - Grow a Garden
repeat task.wait() until game:IsLoaded()

-- Kiểm tra đúng game
local GAME_ID = 7436755782 -- Grow a Garden
if game.GameId ~= GAME_ID then
    warn("GrowHub: Bạn không ở trong game Grow a Garden!")
    return
end

-- Hiển thị thông báo
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "GrowHub Loaded!",
    Text = "Grow a Garden Script đã được tải!",
    Icon = "rbxassetid://99764942615873",
    Duration = 5
})

-- ====== Chức năng chính ======
-- Ví dụ Auto Farm cơ bản
local autoFarm = false

local function startAutoFarm()
    autoFarm = true
    while autoFarm do
        pcall(function()
            local player = game.Players.LocalPlayer
            local char = player.Character
            local root = char and char:FindFirstChild("HumanoidRootPart")
            if root then
                -- Ví dụ: Farm bằng cách nhặt tất cả vật phẩm có thể
                for _, obj in pairs(workspace:GetDescendants()) do
                    if obj:IsA("ProximityPrompt") then
                        fireproximityprompt(obj)
                    end
                end
            end
        end)
        task.wait(0.5)
    end
end

local function stopAutoFarm()
    autoFarm = false
end

-- Bật AutoFarm ngay khi load
startAutoFarm()

-- Khi thoát game, dừng auto farm
game:BindToClose(stopAutoFarm)
